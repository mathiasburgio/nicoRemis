        if( localStorage.getItem("estilo") === "dark" ) $("body").addClass("dark-mode");

        $("[nav='cerrar-sesion']").click(async ev=>{
            ev.preventDefault();
            ev.stopPropagation();
            let ret = await modal.pregunta(`Salir de <b>NICOLAS REMIS</b>`);
            if( ret ) window.close();
        })

        $("[name='estilo-light']").click(()=>{
            localStorage.setItem("estilo", "light");
            $("body").removeClass("dark-mode");
            G._playSound({message: "Estilo cambiado!"});
        });

        $("[name='estilo-dark']").click(()=>{
            localStorage.setItem("estilo", "dark");
            $("body").addClass("dark-mode");
