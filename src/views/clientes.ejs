<div id="clientes" class="row">
    <div class="col">
        <article class="card card-primary card-outline">
            <div class="card-header">
                <h5 class="m-0">Listado</h5>
            </div>
            <div class="card-body">

                <div class="row mb-3">
                    <div class="col">
                        <button class="btn btn-light btn-flat btn-sm btn-block" crud="btNew">Nuevo</button>
                    </div>
                    <div class="col">
                        <button class="btn btn-light btn-flat btn-sm btn-block" crud="btModify">Modificar</button>
                    </div>
                    <div class="col">
                        <button class="btn btn-light btn-flat btn-sm btn-block" disabled crud="btDelete">Eliminar</button>
                    </div>
                </div>

                <div class="input-group input-group-sm mb-3">
                    <input type="search" autocomplete="off" class="form-control form-control-sm" crud="txSearch" placeholder="Buscar...">                                    
                </div>

                <div class="border" id="container-main-table" style="height: 65vh; overflow-y: scroll;">
                    <table class="table table-sm mb-0 "></table>
                </div>
            </div>
        </article>
    </div>
    <div class="col">
        <article class="card card-primary card-outline">
            <div class="card-header p-0 border-bottom-0">
                <ul class="nav nav-tabs pt-2" id="custom-tabs-four-tab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link h5 active" data-toggle="pill" href="#custom-tabs-datos" role="tab">Datos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link h5" data-toggle="pill" href="#custom-tabs-cta-cte" role="tab">Cta/Cte</a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="custom-tabs-datos" role="tabpanel">
                        <div id="panelDatos" crud="fields">
                            <div class="form-group">
                                <label for="">Nombre</label>
                                <input type="text" class="form-control form-control-sm" autocomplete="off" name="nombre">
                            </div>
                            <div class="form-group">
                                <label for="">Teléfono</label>
                                <input type="text" class="form-control form-control-sm" autocomplete="off" name="telefono">
                            </div>
                            <div class="form-group">
                                <label for="">Dirección</label>
                                <input type="text" class="form-control form-control-sm" autocomplete="off" name="direccion">
                            </div>
                            <div class="form-group">
                                <label for="">Anotación</label>
                                <textarea class="form-control form-control-sm" autocomplete="off" name="anotacion"></textarea>
                            </div>
                            <div class="text-right">
                                <button class="btn btn-primary btn-flat" name="" crud="btSave">Guardar</button>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="custom-tabs-cta-cte" role="tabpanel">
                        <div class="border">
                            <table class="table table-sm mb-0" id="tabla-cta-cte" style="font-size: 0.8rem;">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Fecha</th>
                                        <th>Detalle</th>
                                        <th class="text-right">Monto</th>
                                        <th class="text-right">Saldo</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="100%">
                                            <button class="btn btn-flat btn-block btn-primary" name="cobrar_viajes">Cobrar viajes</button>
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <div class="text-right mt-2">
                            <button class="btn btn-warning" name="imprimir">
                                <i class="fas fa-print"></i>
                                Imprimir
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </article>
    </div>
</div>

<div id="modales" class="d-none">
    <div id="modal_cobrar_viajes">
        <b>Viajes no cobrados</b>
        <div class="border mb-3">
            <table class="table table-sm mb-0">
                <thead class="thead-dark">
                    <tr>
                        <th></th>
                        <th>Fecha</th>
                        <th>Origen</th>
                        <th>Destino</th>
                        <th class="text-right">$</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
        <div class="form-group">
            <label for="">A cobrar</label>
            <input type="text" readonly class="form-control" name="total">
        </div>
        <div class="form-group">
            <label for="">Caja</label>
            <select class="form-control" name="caja"></select>
        </div>
        <button class="btn btn-primary btn-flat" name="cobrar">Cobrar</button>
    </div>
</div>
<script src="/scripts/Clientes.js"></script>
<script>
    var clientes = null;
    window.onload = () =>{
        clientes = new Clientes(true);
    }
</script>